{
  "name": "attributes-php/fastendpoints-depends",
  "type": "wordpress-muplugin",
  "description": "Treats WordPress plugins as dependencies to speed up your REST API's",
  "authors": [
    {
      "name": "Andr√© Gil",
      "homepage": "https://github.com/matapatos"
    }
  ],
  "keywords": [
    "wordpress",
    "rest-api",
    "plugin",
    "dependencies"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "attributes-php/wp-fastendpoints-contracts": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Attributes\\Wp\\FastEndpoints\\Depends\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Attributes\\Wp\\FastEndpoints\\Depends\\Tests\\": "tests/"
    },
    "files": [
      "tests/constants.php"
    ]
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "dingo-d/wp-pest": "^1.6",
    "brain/monkey": "2.*",
    "laravel/pint": "*",
    "pestphp/pest-plugin-parallel": "^1.2",
    "attributes-php/wp-fastendpoints": "^3.0"
  },
  "scripts": {
    "lint": "./vendor/bin/pint --config pint.json",
    "plugin": "composer install --no-dev --optimize-autoloader && composer archive --file 'fastendpoints-depends' --format zip",
    "setup:wp:6.0": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.0.10 --skip-delete --no-interaction",
    "setup:wp:6.1": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.1.8 --skip-delete --no-interaction",
    "setup:wp:6.2": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.2.7 --skip-delete --no-interaction",
    "setup:wp:6.3": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.3.6 --skip-delete --no-interaction",
    "setup:wp:6.4": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.4.6 --skip-delete --no-interaction",
    "setup:wp:6.5": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.5.6 --skip-delete --no-interaction",
    "setup:wp:6.6": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.6.3 --skip-delete --no-interaction",
    "setup:wp:6.7": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --wp-version 6.7.3 --skip-delete --no-interaction",
    "setup:wp:latest": "rm -rf wp/ && ./vendor/bin/wp-pest setup plugin --plugin-slug my-plugin --skip-delete --no-interaction",
    "test:lint": "./vendor/bin/pint --test",
    "test:coverage": "./vendor/bin/pest --coverage --parallel",
    "test:unit": "./vendor/bin/pest --colors=always --exclude-group=integration --exclude-group=final --parallel",
    "test:integration": "./vendor/bin/pest --colors=always --group=integration",
    "test": [
      "@test:lint",
      "@test:unit",
      "@test:integration"
    ]
  },
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "composer/installers": true
    }
  },
  "archive": {
    "name": "fastendpoints-depends",
    "exclude": ["LICENSE", "tests/", "wp/", "wp-content/", "docs/", "*.xml", "*.zip", ".md", ".*"]
  }
}
